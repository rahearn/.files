# Text Editor
#
export EDITOR="vim"

# Homebrew
#
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# Composer
#
export PATH=$HOME/.composer/vendor/bin:$PATH

# Path for RVM
#
export PATH=$HOME/.rvm/bin:$PATH

# Path for `go get`
#
export GOPATH=$HOME/Developer/golang
export PATH=$PATH:$GOPATH/bin

# Terminal
#
export TERM="xterm-256color"

# Boot2Docker start and $VARIABLES export but be quiet about it.
#
# $(boot2docker up > /dev/null 2>&1) # Not needed in every shell, dude.
$(boot2docker shellinit 2> /dev/null)

# Disable Tmux auto-titling of windows
#
export DISABLE_AUTO_TITLE=true

# CloudGov Helpers
#
export CG_PIPELINE="$HOME/Developer/cloud.gov/cg-pipeline-tasks"
export CG_SCRIPT="$HOME/Developer/cloud.gov/cg-scripts"

# Gulp autocompletion
#
eval "$(gulp --completion=zsh)"
