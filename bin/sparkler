#!/bin/bash

if ! [ -z "$1" ]
then
  tag_search="-t ${1}"
else
  tag_search=''
fi

if ! [ -z "$2" ]
then
  limit=$2
else
  limit=80
fi

timesheets=$(
  clocker ls $tag_search | \
  tail -n $limit | \
  grep -o -E '\([0-9:]+\)' | \
  sed -E 's/\(|\)/ /g' | \
  sed -E 's/:/ /g' | \
  awk '{print $1 * 60 * 60 + $2 * 60 + $3}'
)

echo "$timesheets" | spark
